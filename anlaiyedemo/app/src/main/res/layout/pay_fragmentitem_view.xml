<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50.0dip"
    android:background="@color/white"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/payfragment_item_hometv"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:drawableTop="@drawable/homebot_1_r"
        android:gravity="center"
        android:paddingTop="8.0dip"
        android:text="首页"
        android:textColor="#ffff4b38"
        android:textSize="12.0sp"
        />

    <RelativeLayout
        android:id="@+id/payfragment_item_shopcarlayout"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        >

        <TextView
            android:id="@+id/payfragment_item_shopcartv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:drawableTop="@drawable/homebot_2"
            android:gravity="center"
            android:paddingTop="8.0dip"
            android:text="购物车"
            android:textColor="#ff666666"
            android:textSize="12.0sp"
            />

        <TextView
            android:id="@+id/payfragment_item_shopcarnumtv"
            android:layout_width="18.0dip"
            android:layout_height="18.0dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15.0dip"
            android:layout_marginTop="3.0dip"
            android:background="@drawable/shape_red_circle"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size10"
            android:visibility="gone"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/payfragment_item_messagetv"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:drawableTop="@drawable/homebot_3"
        android:gravity="center"
        android:paddingTop="8.0dip"
        android:text="秒杀"
        android:textColor="#ff666666"
        android:textSize="12.0sp"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/payfragment_item_mytv"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:drawableTop="@drawable/homebot_4"
        android:gravity="center"
        android:paddingTop="8.0dip"
        android:text="俺的中心"
        android:textColor="#ff666666"
        android:textSize="12.0sp"
        />
</LinearLayout>