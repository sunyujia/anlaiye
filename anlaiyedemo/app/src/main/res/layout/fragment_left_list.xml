<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fragment_bg"
    android:orientation="vertical"
    android:paddingTop="@dimen/list_padding"
    >

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/list_padding"
        android:paddingRight="@dimen/list_padding"
        >

        <ImageView
            android:id="@+id/menu_headview_iv"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:src="@drawable/default_userheadview"
            />

        <TextView
            android:id="@+id/menu_nickname_tv"
            style="@style/white_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="186*****649"
            />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_margin="@dimen/list_padding"
        android:background="#50aaaaaa"
        android:layout_below="@id/ll_title"
        />

    <ListView
        android:id="@+id/menu_list"
        android:layout_below="@id/divider"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="0.0dip"
        android:listSelector="#00000000"
        />

    <TextView
        android:id="@+id/menu_setting_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:drawableLeft="@drawable/setting_nomal_w"
        android:drawablePadding="8.0dip"
        android:gravity="center_vertical"
        android:padding="@dimen/list_padding"
        android:text="设置"
        android:textColor="#ffaaaaaa"
        android:textSize="14.0sp"
        />
</RelativeLayout>